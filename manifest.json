{
  "manifest_version": 2,
  "name": "Thread Image Selector",
  "version": "1.0",
  "description": "Select images from specific threads",
  "permissions": [
    "activeTab",
    "storage",
    "contextMenus"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*.boards.4chan.org/*/thread/*",
        "*://*.vipergirls.to/threads/*",
        "*://*.imx.to/g/*",
        "*://*.pornpics.com/galleries/*/"
      ],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Thread Image Selector"
  },
  "icons": {
    "48": "icons/icon48.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "@thread-image-selector",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}